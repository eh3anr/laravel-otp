{
    "name": "eh3anr/laravel-otp",
    "description": "",
    "keywords": [
        "eh3anr",
        "laravel-otp"
    ],
    "homepage": "https://github.com/eh3anr/laravel-otp",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ehsan Rajabi",
            "email": "eh3an.r@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Eh3anr\\LaravelOtp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eh3anr\\LaravelOtp\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Eh3anr\\LaravelOtp\\LaravelOtpServiceProvider"
            ],
            "aliases": {
                "LaravelOtp": "Eh3anr\\LaravelOtp\\LaravelOtpFacade"
            }
        }
    }
}
